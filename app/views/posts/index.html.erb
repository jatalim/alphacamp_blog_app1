
<table>
<thead>
<th> Title </th>
<th> Author </th>
<th> Created At </th>
</thead>

<tbody>
<%= @posts.each do|post| %> 
	<tr>
	<td>
		<%= post.title %> 
	</td>
	<td>
		<%= post.author %> 
	</td>
	<td>
		<%= post.created_at %> 
	</td>
	 <td> 
	 <%= link_to "Edit", edit_post_path(post) %>
	 </td>
	 <td>
	<%= link_to 'Destroy', post_path(post), 
	method: :delete, data: { confirm: 'Are you sure?' } %>
	 </td>
	</tr>
<% end %> 
</tbody>
</table>

<%= link_to "Create New Post", new_post_path %>
