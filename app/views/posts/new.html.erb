<div class = "post_new">

<%= form_for @post, url: posts_path, method: :post do |f| %>
 
 	<div class = "container">

 	<div class = "row">
 	<%= f.label :title %>
  	<%= f.text_field :title %>
	</div>

	<div class = "row">
  	<%= f.label :author %>
 	<%= f.text_field :author %>
	</div>

	<div class = "row">
	<%= f.label :content %>
 	<%= f.text_area :content %>
 	</div>

	<div>
  	<%= f.submit "Create" %>
	</div>

	</div>
<% end %>

</div>